<?xml version="1.0" encoding="UTF-8"?>
<project name="Installer" default="installer">
	<property file="installer.properties" />

	<property name="work.dir" value="${basedir}/work"/>
	
	<import file="../eclipse-ant/p2.ant"/>
	
	<target name="installer">
		<delete dir="${work.dir}"/>
        <unzip src="${emfconnector.metamodel.exporter.zip}" dest="${work.dir}"/>
		<run.eclipse.install.pluginOrFeature
			eclipse.destination.dir="${eclipse.destination.dir}"
			repositories.url.list="file://${work.dir}"
			pluginOrFeatures.name.list="org.openflexo.emfconnector.metamodel.exporter.updatesite.feature.feature.group" />
		<delete dir="${work.dir}"/>
    </target>
</project>
